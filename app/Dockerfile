FROM busybox AS build-stage
ARG GITHUB_RUN_ID
ARG GITHUB_ACTOR
ARG GITHUB_JOB
ARG GITHUB_ACTOR
ARG GITHUB_EVENT_NAME
ARG GITHUB_EVENT_PATH
ARG GITHUB_REF
ARG GITHUB_REF_NAME
ARG GITHUB_REF_TYPE

ENV GITHUB_RUN_ID=$GITHUB_RUN_ID
ENV GITHUB_ACTOR=$GITHUB_ACTOR
ENV GITHUB_JOB=$GITHUB_JOB
ENV GITHUB_ACTOR=$GITHUB_EVENT_NAME
ENV GITHUB_EVENT_NAME=$GITHUB_EVENT_NAME
ENV GITHUB_EVENT_PATH=$GITHUB_EVENT_PATH
ENV GITHUB_REF=$GITHUB_REF
ENV GITHUB_REF_NAME=$GITHUB_REF_NAME
ENV GITHUB_REF_TYPE=$GITHUB_REF_TYPE

RUN printenv >/index.html

FROM nginx:1.19.7-alpine AS final-stage
COPY --from=build-stage  /index.html /usr/share/nginx/html/index.html
